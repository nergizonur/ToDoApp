@using ToDoApp.Models
@model List<Task>
@{
    Layout = null;
}

<!DOCTYPE html>

<html class="w-100 h-100">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <style>
        .taskBox {
            cursor: pointer;
        }
        /* Modal stilleri */
        .modal {
            display: none;
            position: fixed;
            z-index: 1;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
        }

        .modal-content {
            background-color: white;
            margin: 15% auto;
            padding: 20px;
            border: 1px solid #888;
            width: 30%;
        }

        .close {
            color: #aaa;
            float: right;
            font-size: 28px;
            font-weight: bold;
        }

            .close:hover,
            .close:focus {
                color: black;
                text-decoration: none;
                cursor: pointer;
            }
    </style>
</head>
<body class="w-100 h-100" style="background-image: url(../../images/dark-gray-acrylic-painting-wallpaper-image.jpg)">
    <div class="w-100 h-100">
        <div class="row d-flex justify-content-center">
            <div class="col-6 pt-5">
                <form method="post" action="/Home/TaskAdd">
                    <div class="row align-items-center">
                        <div class="col-9">
                            <input type="text" name="taskText" class="form-control" placeholder="Görevinizi Giriniz" />
                        </div>
                        <div class="col-3">
                            <input type="submit" value="Ekle" class="btn btn-success" />
                        </div>
                    </div>
                </form>
                <div class="mt-5">
                    @foreach (Task task in Model)
                    {
                        <div class="rounded-3 bg-white py-1 ps-5 pe-3 shadow mb-3 taskBox">
                            <div class="row align-items-center">
                                <div class="col-9">
                                    @task.TaskText
                                </div>
                                <div class="col-3">
                                    <button type="button" class="btn btn-danger" onclick="openModal('@task.Id')">
                                        <i class="fa-solid fa-trash"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <div id="deleteModal" class="modal">
        <div class="modal-content">
            <span class="close">&times;</span>
            <p>Bu Görevi Silmek İstiyor Musunuz?</p>
            <form id="deleteForm" method="post" action="/Home/DeleteTask">
                <input type="hidden" id="taskId" name="taskId" value="" />
                <button type="submit" class="btn btn-danger">Evet</button>
                <button type="button" class="btn btn-secondary" onclick="closeModal()">Hayır</button>
            </form>
        </div>
    </div>

    <script>
        var modal = document.getElementById("deleteModal");
        var span = document.getElementsByClassName("close")[0];

        function openModal(taskId) {
            document.getElementById("taskId").value = taskId;
            modal.style.display = "block";
        }

        function closeModal() {
            modal.style.display = "none";
        }

        span.onclick = function () {
            modal.style.display = "none";
        }

        window.onclick = function (event) {
            if (event.target == modal) {
                modal.style.display = "none";
            }
        }
    </script>

    <script src="~/js/bootstrap.min.js"></script>
</body>
</html>
