
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Önem Sırası ve Renk Ayarları</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h2 class="mb-4">Renk Ayarları</h2>
        <form action="/Admin/SaveColor" method="post">
            <div class="mb-3">
                <div class="row">
                    <div class="col-9">
                        <label for="importanceLevel" class="form-label">Önem Sırası</label>
                        <select class="form-select" id="OrderScore" name="OrderScore" required>
                            <option value="1" selected>1 - Önemsiz</option>
                            <option value="2">2 - Az Önemli</option>
                            <option selected value="3">3 - Orta Önemli</option>
                            <option value="4">4 - Önemli</option>
                            <option value="5">5 - Çok Önemli</option>
                        </select>
                    </div>
                    <div class="col-3">

                        <label for="color" class="form-label">Renk Seçimi</label>
                        <input type="color" class="form-control form-control-color" id="ColorCode" name="ColorCode" value="#FF0000" title="Renk seçin">
                    </div>
                </div>
                
            </div>

            <div class="d-flex justify-content-center">
                <button type="submit" class="btn btn-primary">Kaydet</button>
            </div>
        </form>
    </div>
</body>
</html>
