@{
    Layout = null;
    int? errorCode = ViewBag.ErrorCode;
}

<!DOCTYPE html>

<html class="h-100">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Kaydol</title>
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        html, body {
            overflow-x: hidden;
        }
    </style>
</head>
<body class="h-100">
    <div class="row justify-content-center py-5">
        <div class="col-5">
            <form method="post" action="/User/RegisterUser" class="border border-success-subtle p-5 shadow-lg rounded-3">
                <h4 class="text-center">Kaydol</h4>

                
                @if (errorCode == 1)
                {
                    <div class="alert alert-danger text-center" role="alert">
                        Şifreler eşleşmiyor. Lütfen aynı şifreyi giriniz.
                    </div>
                }
                else if (errorCode == 2)
                {
                    <div class="alert alert-warning text-center" role="alert">
                        Bu e-posta adresi zaten kayıtlı.
                    </div>
                }
                else if (errorCode == -1)
                {
                    <div class="alert alert-success text-center" role="alert">
                        Kayıt işlemi başarılı! Giriş yapabilirsiniz.
                    </div>
                }

                <div class="mb-3">
                    <label for="name" class="form-label">Adınız</label>
                    <input type="text" class="form-control" name="Name" placeholder="Adınızı giriniz" required>
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">E-posta</label>
                    <input type="email" class="form-control" name="Email" placeholder="E-posta adresinizi giriniz" required>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Şifre</label>
                    <input type="password" class="form-control" name="Password" placeholder="Şifrenizi giriniz" required>
                </div>
                <div class="mb-3">
                    <label for="confirm-password" class="form-label">Şifreyi Onaylayın</label>
                    <input type="password" class="form-control" name="confirmPassword" placeholder="Şifrenizi tekrar giriniz" required>
                </div>
                <div class="mb-3 d-flex justify-content-center">
                    <button type="submit" class="btn btn-success">Kaydol</button>
                </div>
                <div class="d-flex justify-content-end">
                    <label class="me-2">Hesabınız Var Mı?</label>
                    <a href="/User/Login" class="text-decoration-none">Giriş Yap</a>
                </div>
            </form>
        </div>

    </div>
</body>
</html>

</html>

